generator client {
  provider = "prisma-client-js"
	previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
	schemas = ["facilites_db", "public"]
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  ext_expires_in    Int?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "Account_userId_unique")
	@@schema("facilites_db")
}

model Category {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  price       Float
  facilityId  Int
  Facility    Facility      @relation(fields: [facilityId], references: [id])
  Reservation Reservation[]

  @@index([facilityId], map: "Category_facilityId_unique")
	@@schema("facilites_db")
}

model Events {
  id               String        @id @unique
  calendarId       String?
  title            String?
  start            DateTime?
  end              DateTime?
  location         String?
  recurringEventId String?
  facilityId       Int
  Facility         Facility      @relation(fields: [facilityId], references: [id], onDelete: Cascade)
  Reservation      Reservation[]

  @@index([facilityId], map: "Events_facilityId_unique")
	@@schema("facilites_db")
}

model Facility {
  id               Int           @id @default(autoincrement())
  name             String        @unique
  building         String
  address          String
  imagePath        String?
  capacity         Int?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime
  googleCalendarId String        @unique(map: "Facility_calendarId_key")
  Category         Category[]
  Events           Events[]
  Reservation      Reservation[]
  Option           Option[]
	@@schema("facilites_db")
}

model InsuranceFiles {
  id            Int         @id @default(autoincrement())
  path          String?
  fileName      String?
  varified      Boolean     @default(false)
  reservationId Int
  Reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  @@index([reservationId], map: "InsuranceFiles_reservationId_unique")
	@@schema("facilites_db")
}

model Option {
  id       Int        @id @default(autoincrement())
  name     String
  Facility Facility[]
	@@schema("facilites_db")
}

model Reservation {
  id               Int               @id @default(autoincrement())
  userId           String
  eventName        String
  conflicts        Boolean           @default(false)
  facilityId       Int
  approved         Approved          @default(pending)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime
  details          String?           @db.VarChar(2000)
  eventId          String?
  fees             Float?
  paid             Boolean           @default(false)
  inPerson         Boolean           @default(false)
  insurance        Boolean
  primaryContact   String?
  responsibleParty String?
  doorAccess       Boolean?
  doorsDetails     String?
  name             String?
  people           String?
  techDetails      String?
  techSupport      Boolean?
  phone            String?
  ticketMade       Boolean           @default(false)
  categoryId       Int
  paymentUrl       String?
  paymentLinkID    String?           @unique
  totalHours       Float?
  InsuranceFiles   InsuranceFiles[]
  Category         Category          @relation(fields: [categoryId], references: [id])
  Events           Events?           @relation(fields: [eventId], references: [id], onDelete: Cascade)
  Facility         Facility          @relation(fields: [facilityId], references: [id])
  User             User              @relation(fields: [userId], references: [id])
  ReservationDate  ReservationDate[]
  ReservationFees  ReservationFees[]

  @@index([categoryId], map: "Reservation_categoryId_unique")
  @@index([eventId], map: "Reservation_eventId_unique")
  @@index([facilityId], map: "Reservation_facilityId_unique")
  @@index([userId], map: "Reservation_userId_unique")
	@@schema("facilites_db")
}

model ReservationDate {
  id            Int         @id @default(autoincrement())
  startDate     String
  endDate       String
  startTime     String
  endTime       String
  reservationId Int
  approved      Approved    @default(pending)
  Reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  @@index([reservationId], map: "ReservationDate_reservationId_unique")
	@@schema("facilites_db")
}

model ReservationFees {
  id             Int         @id @default(autoincrement())
  additionalFees Float?
  feesType       String?
  reservationId  Int
  Reservation    Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  @@index([reservationId], map: "ReservationFees_reservationId_unique")
	@@schema("facilites_db")
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Session_userId_unique")
	@@schema("facilites_db")
}

model User {
  id            String        @id
  name          String
  image         String?
  email         String        @unique
  emailVerified DateTime?
  password      String?
  tos           Boolean       @default(false)
  provider      String?
  externalUser  Boolean       @default(false)
  role          UserRole      @default(USER)
  createdAt     DateTime      @default(now())
  Account       Account[]
  Reservation   Reservation[]
  Session       Session[]
	@@schema("facilites_db")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
	@@schema("facilites_db")
}

enum Approved {
  pending
  approved
  denied
  canceled
	@@schema("facilites_db")
}

enum UserRole {
  CAL_ADMIN
  ADMIN_ADMIN
  GR_ADMIN
  LHS_ADMIN
  LMS_ADMIN
  WE_ADMIN
  SO_ADMIN
  SUP_ADMIN
  USER
	@@schema("facilites_db")
}
