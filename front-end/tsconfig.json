{
  "extends": "@local/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": ".turbo/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [
    ".",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/template.tsx",
    "../packages/db/src/schema/schema.ts"
  ],
  "exclude": ["node_modules"]
}
